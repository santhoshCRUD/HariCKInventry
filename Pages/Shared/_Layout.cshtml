@* Pages/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HariCKInventory</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Zoho Inventory Gradient */
        body {
            background: linear-gradient(135deg, skyblue, silver);
            min-height: 100vh;
            background-attachment: fixed;
            background-repeat: no-repeat;
            color: #ffffff;
        }

        /* Glass / Frosted Navbar */
        .navbar-glass {
            background: rgba(0, 0, 0, 0.25);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.15);
        }

            .navbar-glass .nav-link {
                color: #e8fdf8 !important;
                font-weight: 500;
            }

                .navbar-glass .nav-link.active {
                    color: #ffffff !important;
                    font-weight: 700;
                    border-bottom: 2px solid #ffffff;
                }

        .navbar-brand {
            font-weight: 600;
            color: #ffffff !important;
        }

        /* Transparent Footer */
        footer {
            background: rgba(255, 255, 255, 0.15) !important;
            color: #ffffff !important;
            border-top: none !important;
            backdrop-filter: blur(6px);
            -webkit-backdrop-filter: blur(6px);
        }

        /* Main container adjustments */
        .main-container {
            background: rgba(255, 255, 255, 0.10);
            padding: 25px;
            border-radius: 15px;
            margin-top: 30px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-glass">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">HariCKInventory</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Home" ? "active" : "")"
                           asp-page="/Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Categories" ? "active" : "")"
                           asp-page="/Categories/Index">Categories</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "SubCategories" ? "active" : "")"
                           asp-page="/SubCategories/Index">Sub Categories</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Products" ? "active" : "")"
                           asp-page="/Products/Index">Products</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Reports" ? "active" : "")"
                           asp-page="/Reports/Index">Reports</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container main-container">
        @RenderBody()
    </div>

    <!-- Footer --> 
    <footer class="text-center text-muted py-4 mt-5">
        © 2025 — <strong>HariCK 3D Printing Inventory</strong>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
