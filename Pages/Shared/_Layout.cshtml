@* Pages/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HariCKInventory</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Zoho Inventory Gradient */
        body {
            background: aliceblue;
            min-height: 100vh;
            background-attachment: fixed;
            background-repeat: no-repeat;
            color: #ffffff;
        }

        /* ================================
           Glass / Frosted Navbar
        ================================ */
        .navbar-glass {
            background-color: #fff7dd;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }
            
            /* Nav links base */
            .navbar-glass .nav-link {
                color: saddlebrown !important;
                font-weight: 500;
                padding: 8px 14px;
                border-radius: 8px;
                transition: all 0.25s ease;
            }

                /* Hover effect */
                .navbar-glass .nav-link:hover {
                    background: rgba(255, 255, 255, 0.25);
                    color: black !important;
                }

                /* Active (current page) */
                .navbar-glass .nav-link.active {
                    background: brown;
                    color: black !important;
                    font-weight: 600;
                }

                /* Optional: Click feedback */
                .navbar-glass .nav-link:active {
                    transform: scale(0.96);
                }
        .navbar-nav-logout{
            color: saddlebrown !important;
            font-weight: bold;
            padding: 8px 14px;
            border-radius: 8px;
            justify-content: flex-end;
        }

        /* Transparent Footer */
        footer {
            background: rgba(255, 255, 255, 0.15) !important;
            color: #ffffff !important;
            border-top: none !important;
            backdrop-filter: blur(6px);
            -webkit-backdrop-filter: blur(6px);
        }

        /* Main container adjustments */
        .main-container {
            background: rgba(255, 255, 255, 0.10);
            padding: 25px;
            border-radius: 15px;
            margin-top: 30px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .navbar-brand{
        color: !important;  
        font-weight:bold;
        font:large;
        font-family:'Book Antiqua';
            line-height: 1.6;
            padding: 25px;
            font-size: 35px;
        }

        .nav-left-cornor-logo{
            width: 42px!important;
        }

        .navbar-expand-lg .navbar-collapse {
            display: flex !important;
            justify-content: flex-end;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    @{
        var isLoggedIn = Context.Session.GetString("IsLoggedIn") == "true";
    }

    @if (isLoggedIn)
    {
        <nav class="navbar navbar-expand-lg navbar-glass">
            <div class="container-fluid">
                @* <img src="~/img/3d-printerlogo.png" class="nav-left-cornor-logo" /> *@
                <img src="~/img/cube.png" class="nav-left-cornor-logo" />
                <a class="navbar-brand" asp-page="/HomePage">
                     HariCK Inventory
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav" >
                    <nav class="navbar navbar-expand-lg navbar-glass">
                        <div class="container-fluid">
                          

                            <div class="collapse navbar-collapse" id="navbarNav">

                                <!-- LEFT MENU -->
                                <ul class="navbar-nav mb-2 mb-lg-0">
                                    <li class="nav-item">
                                        <a class="nav-link @(ViewData["Title"]?.ToString() == "HomePage" ? "active" : "")"
                                           asp-page="/HomePage">Home</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Categories" ? "active" : "")"
                                           asp-page="/Categories/Index">Categories</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Sub Categories" ? "active" : "")"
                                           asp-page="/SubCategories/Index">Sub Categories</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Products" ? "active" : "")"
                                           asp-page="/Products/Index">Products</a>
                                    </li>

                                   @*  <li class="nav-item">
                                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Reports" ? "active" : "")"
                                           asp-page="/Reports/Index">Reports</a>
                                    </li> *@
                                </ul>


                            </div>
                        </div>
                    </nav>

                </div>

                
            </div>
            <div >
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 navbar-nav-logout">
                    <li class="nav-item" >
                        <a class="nav-link" asp-page="/Logout"><span style="color:darkorange">Logout</span> <span style="color:midnightblue">(@Context.Session.GetString("Username"))</span></a>
                    </li>
                </ul>
            </div>
        </nav>       
    }

    <!-- Main content -->
    <div class="container main-container">
        @RenderBody()
    </div>

    <!-- Footer --> 
    <footer class="text-center text-muted py-4 mt-5">
        © 2025 — <strong>HariCK 3D Printing Inventory</strong>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
