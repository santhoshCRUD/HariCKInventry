    /* LEFT SIDE */
    .login-left {
        background: aliceblue;
        color: #ffffff;
        padding: 40px;
    }

    .brand-name {
        font-size: 2.2rem;
        font-weight: 700;
    }

    .brand-tagline {
        font-size: 0.95rem;
        opacity: 0.9;
        max-width: 300px;
    }

    /* =====================================================
       BRAND LOGO – LOGIN PAGE (PREMIUM STYLE)
       ===================================================== */

    .image-placeholder {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        background: rgba(255,255,255,0.25);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 14px;
        /* Premium effects */
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.25), inset 0 0 0 1px rgba(255,255,255,0.25);
        /* Animation */
        animation: floatLogo 6s ease-in-out infinite;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        /* Logo image */
        .image-placeholder img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            border-radius: 30%;
        }

        /* Hover interaction */
        .image-placeholder:hover {
            transform: scale(1.08);
            box-shadow: 0 14px 36px rgba(0,0,0,0.35), inset 0 0 0 1px rgba(255,255,255,0.35);
        }

   

   


    /* RIGHT SIDE */
    .login-right {
        background: #ffffff;
    }

    /* Login Button (Rich & Clickable) */
    .btn-login {
        background: linear-gradient(135deg, #258cfb, #1b63c5);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

        /* Hover */
        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(37, 140, 251, 0.4);
        }

        /* Active */
        .btn-login:active {
            transform: translateY(0);
            box-shadow: 0 3px 8px rgba(37, 140, 251, 0.35);
        }

        /* Focus */
        .btn-login:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(37,140,251,0.35);
        }
        /* Login page illustration */
.login-illustration {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    border-radius: 10px;
}

    
