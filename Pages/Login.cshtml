@page
@model HariCKInventry.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-wrapper d-flex align-items-center justify-content-center min-vh-100">

    <div class="login-card row g-0 shadow-lg">
        <!-- LEFT SIDE (Brand / Image Section) -->
        <div class="col-md-6 login-left d-flex flex-column justify-content-center align-items-center text-center">
            <h1 class="brand-name mb-3">HariCK Inventory</h1>            
            <div class="image-placeholder">
                <img src="~/img/3d-printer.gif" />
            </div>


            
        </div>

        <!-- RIGHT SIDE (Login Form) -->
        <div class="col-md-6 login-right p-5">

            <h3 class="mb-4 fw-semibold text-center">Login</h3>

            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Input.Username" class="form-label"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-login w-100">
                    Login
                </button>
            </form>
        </div>

    </div>
</div>

<!-- PAGE-SPECIFIC STYLES -->
<style>
    /* Wrapper */
