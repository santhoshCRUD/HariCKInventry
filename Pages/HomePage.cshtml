@page
@model HariCKInventry.Pages.HomePageModel
@{
    ViewData["Title"] = "HomePage";
}

<!-- Hero Section -->
<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold display-5 text-dark">
            Inventory<span class="text-primary" style="font-size:50px"> Management</span>
        </h1>
        <p class="lead text-secondary mt-3">

        </p>
    </div>

    <!-- Info Cards -->
    <div class="row justify-content-center mt-5 g-4">

        <!-- Products -->
        <div class="col-md-4">
            <div class="card dashboard-card product-card"
                 onclick="location.href='@Url.Page("/Products/Index")'">

                <div class="card-body text-center">
                    <div class="icon-wrapper product-bg">
                            <img src="~/img/product.png" />
                    </div>

                    <div class="dashboard-count">@Model.ProductCount</div>
                    <div class="dashboard-title">Products</div>
                </div>
            </div>
        </div>


        <!-- Categories -->
        <div class="col-md-4">
            <div class="card dashboard-card category-card"
                 onclick="location.href='@Url.Page("/Categories/Index")'">

                <div class="card-body text-center">
                    <div class="icon-wrapper category-bg">
                        <img src="~/img/category.png" />
                    </div>

                    <div class="dashboard-count">@Model.CategoryCount</div>
                    <div class="dashboard-title">Categories</div>
                </div>
            </div>
        </div>


        <!-- SubCategories -->
        <div class="col-md-4">
            <div class="card dashboard-card subcategory-card"
                 onclick="location.href='@Url.Page("/SubCategories/Index")'">

                <div class="card-body text-center">
                    <div class="icon-wrapper subcategory-bg">
                        <img src="~/img/subcategory.png" />
                    </div>

                    <div class="dashboard-count">@Model.SubCategoryCount</div>
                    <div class="dashboard-title">Sub Categories</div>
                </div>
            </div>
        </div>



</div>
</div>


<!-- Optional Hover Scale Style -->
<style>
        /* ===============================
           DASHBOARD CARD – PREMIUM UI
        ================================ */

        .dashboard-card {
            border: none;
            border-radius: 18px;
            cursor: pointer;
            min-height: 220px;
            background: #ffffff;
            transition: all 0.3s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 14px 30px rgba(0,0,0,0.15);
            }

            .dashboard-card:active {
                transform: scale(0.97);
            }

        /* Icon container */
        .icon-wrapper {
            width: 64px;
            height: 64px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 10px auto 12px;
        }

        /* Icons */
        .dashboard-icon {
            font-size: 2rem;
            color: #ffffff;
        }

        /* Count */
        .dashboard-count {
            font-size: 2.6rem;
            font-weight: 700;
            margin-top: 6px;
            color: #212529;
        }

        /* Title */
        .dashboard-title {
            font-size: 1rem;
            font-weight: 600;
            color: #6c757d;
            margin-top: 4px;
        }

        /* ===============================
           CARD COLOR VARIANTS (SOFT)
        ================================ */

        /* Icon container (already present, keep it) */
        .icon-wrapper {
            width: 64px;
            height: 64px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 10px auto 12px;
            overflow: hidden; /* 🔑 prevents overflow */ 
        }

            /* ICON IMAGE FIX */
            .icon-wrapper img {
                max-width: 70%;
                max-height: 70%;
                object-fit: contain;
                display: block;
            }

        .dashboard-card:hover .icon-wrapper img {
            transform: scale(1.1);
            transition: 0.25s ease;
        }

        .icon-wrapper {
            backdrop-filter: blur(6px);
        }

</style>

