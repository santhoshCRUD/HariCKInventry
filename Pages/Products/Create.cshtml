@page
@model HariCKInventry.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Create Product";
}

<div class="page-header mb-4">
    <h2 class="fw-semibold">Create Product</h2>
</div>

<form method="post" enctype="multipart/form-data">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">Basic Information</div>
        <div class="card-body row g-3">

            <div class="col-md-4">
                <label class="form-label">Product ID</label>
                <input asp-for="Product.ProductId" class="form-control" />
                <span asp-validation-for="Product.ProductId" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label class="form-label">Name</label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label class="form-label">Description</label>
                <textarea asp-for="Product.Description" class="form-control" ></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Category</label>
                <select asp-for="Product.CategoryId" asp-items="Model.CategoriesSelect" class="form-select"></select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Sub Category</label>
                <select asp-for="Product.SubCategoryId" asp-items="Model.SubCategoriesSelect" class="form-select"></select>
                <span asp-validation-for="Product.SubCategoryId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Dimensions -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">Dimensions & Cost</div>
        <div class="card-body row g-3">

            <div class="col-md-4"><label class="form-label">Length (mm)</label><input asp-for="Product.Length" class="form-control" /></div>
            <div class="col-md-4"><label class="form-label">Width (mm)</label><input asp-for="Product.Width" class="form-control" /></div>
            <div class="col-md-4"><label class="form-label">Height (mm)</label><input asp-for="Product.Height" class="form-control" /></div>

            <div class="col-md-4"><label class="form-label">Weight (g)</label><input asp-for="Product.Weight" class="form-control" /></div>
            <div class="col-md-4"><label class="form-label">Print Time (min)</label><input asp-for="Product.PrintTimeMinutes" class="form-control" /></div>
            <div class="col-md-4"><label class="form-label">Cost</label><input asp-for="Product.Cost" class="form-control" /></div>
        </div>
    </div>

    <!-- Printing Parameters -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">Printing Parameters</div>
        <div class="card-body row g-3">

            <div class="col-md-4"><label class="form-label">Material</label><input asp-for="PrintingParameter.Material" class="form-control" /></div>
            <div class="col-md-4"><label class="form-label">Color</label><input asp-for="PrintingParameter.Color" class="form-control" /></div>
            <div class="col-md-4"><label class="form-label">Layer Height</label><input asp-for="PrintingParameter.LayerHeight" class="form-control" /></div>

            <div class="col-md-4"><label class="form-label">Infill (%)</label><input asp-for="PrintingParameter.InfillPercent" class="form-control" /></div>
            <div class="col-md-4"><label class="form-label">Nozzle Temp (°C)</label><input asp-for="PrintingParameter.NozzleTemp" class="form-control" /></div>
            <div class="col-md-4"><label class="form-label">Bed Temp (°C)</label><input asp-for="PrintingParameter.BedTemp" class="form-control" /></div>

            <div class="col-md-6"><label class="form-label">Printer Model</label><input asp-for="PrintingParameter.PrinterModel" class="form-control" /></div>
        </div>
    </div>

    <!-- Uploads -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">Files</div>
        <div class="card-body row g-3">

            <div class="col-md-6"><label class="form-label">STL File</label><input type="file" asp-for="StlFile" class="form-control" /></div>
            <div class="col-md-6"><label class="form-label">Photo 1</label><input type="file" asp-for="Photo1" class="form-control" /></div>
            <div class="col-md-6"><label class="form-label">Photo 2</label><input type="file" asp-for="Photo2" class="form-control" /></div>
            <div class="col-md-6"><label class="form-label">Photo 3</label><input type="file" asp-for="Photo3" class="form-control" /></div>
            <div class="col-md-6"><label class="form-label">Photo 4</label><input type="file" asp-for="Photo4" class="form-control" /></div>
        </div>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-primary px-4">Save Product</button>
        <a asp-page="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

