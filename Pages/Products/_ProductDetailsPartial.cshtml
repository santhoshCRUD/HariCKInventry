@model HariCKInventry.Models.Product

@if (Model == null)
{
    <div class="alert alert-danger">Product not found.</div>
}
else
{
    <!-- Basic Information -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">Basic Information</div>
        <div class="card-body row g-3">
            <div class="col-md-4">
                <label class="form-label">Product ID</label>
                <p><span>@Model.ProductId</span></p>
            </div>
            <div class="col-md-8">
                <label class="form-label">Name</label>
                <p><span>@Model.Name</span></p>
            </div>
            <div class="col-md-8">
                <label class="form-label">Description</label>
                <p><span>@Model.Description</span></p>
            </div>
            <div class="col-md-6">
                <label class="form-label">Category</label>
                <p><span>@Model.Category?.Name</span></p>
            </div>
            <div class="col-md-6">
                <label class="form-label">Sub Category</label>
                <p><span>@Model.SubCategory?.Name</span></p>
            </div>
        </div>
    </div>

    <!-- Dimensions & Cost -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">Dimensions & Cost</div>
        <div class="card-body row g-3">
            <div class="col-md-4"><label class="form-label">Length (mm)</label><p><span>@Model.Length</span></p></div>
            <div class="col-md-4"><label class="form-label">Width (mm)</label><p><span>@Model.Width</span></p></div>
            <div class="col-md-4"><label class="form-label">Height (mm)</label><p><span>@Model.Height</span></p></div>
            <div class="col-md-4"><label class="form-label">Weight (g)</label><p><span>@Model.Weight</span></p></div>
            <div class="col-md-4"><label class="form-label">Print Time (min)</label><p><span>@Model.PrintTimeMinutes</span></p></div>
            <div class="col-md-4"><label class="form-label">Cost</label><p><span>@Model.Cost</span></p></div>
        </div>
    </div>

    <!-- Printing Parameters -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">Printing Parameters</div>
        <div class="card-body row g-3">
            <div class="col-md-4"><label class="form-label">Material</label><p><span>@Model.PrintingParameter?.Material</span></p></div>
            <div class="col-md-4"><label class="form-label">Color</label><p><span>@Model.PrintingParameter?.Color</span></p></div>
            <div class="col-md-4"><label class="form-label">Layer Height</label><p><span>@Model.PrintingParameter?.LayerHeight</span></p></div>
            <div class="col-md-4"><label class="form-label">Infill (%)</label><p><span>@Model.PrintingParameter?.InfillPercent</span></p></div>
            <div class="col-md-4"><label class="form-label">Nozzle Temp (°C)</label><p><span>@Model.PrintingParameter?.NozzleTemp</span></p></div>
            <div class="col-md-4"><label class="form-label">Bed Temp (°C)</label><p><span>@Model.PrintingParameter?.BedTemp</span></p></div>
            <div class="col-md-6"><label class="form-label">Printer Model</label><p><span>@Model.PrintingParameter?.PrinterModel</span></p></div>
        </div>
    </div>

    <!-- Files / Photos -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">Files</div>
        <div class="card-body row g-3">
            @* <div class="col-md-6">
                <label class="form-label">STL File</label>
                @if (!string.IsNullOrEmpty(Model.StlPath))
                {
                    <iframe src="@Url.Content(Model.StlPath)" width="100%" height="300" frameborder="0"></iframe>
                }
                else
                {
                    <p class="text-muted">No STL file uploaded</p>
                }
            </div> *@
            <div class="col-md-6">
                <label class="form-label">Photo 1</label>
                @if (!string.IsNullOrEmpty(Model.Photo1Path))
                {
                    <img src="@Url.Content(Model.Photo1Path)" class="img-fluid rounded" />
                }
                else
                {
                    <p class="text-muted">No photo uploaded</p>
                }
            </div>
            <div class="col-md-6">
                <label class="form-label">Photo 2</label>
                @if (!string.IsNullOrEmpty(Model.Photo2Path))
                {
                    <img src="@Url.Content(Model.Photo2Path)" class="img-fluid rounded" />
                }
            </div>
            <div class="col-md-6">
                <label class="form-label">Photo 3</label>
                @if (!string.IsNullOrEmpty(Model.Photo3Path))
                {
                    <img src="@Url.Content(Model.Photo3Path)" class="img-fluid rounded" />
                }
            </div>
            <div class="col-md-6">
                <label class="form-label">Photo 4</label>
                @if (!string.IsNullOrEmpty(Model.Photo4Path))
                {
                    <img src="@Url.Content(Model.Photo4Path)" class="img-fluid rounded" />
                }
            </div>
        </div>
    </div>
}