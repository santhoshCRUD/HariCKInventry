@page "{id:int}"
@model HariCKInventry.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}
<h2>Delete Product</h2>

<p>Are you sure you want to delete '@Model.Product?.Name'?</p>
<p>
    Category: @Model.Product?.Category?.Name <br />
    SubCategory: @Model.Product?.SubCategory?.Name
</p>

<form method="post">
    <button type="submit">Delete</button>
    <a asp-page="Index">Cancel</a>
</form>