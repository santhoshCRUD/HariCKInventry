@page
@model HariCKInventry.Pages.Categories.IndexModel

<h2>Categories</h2>
<p><a asp-page="Create">Create New</a></p>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Categories)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Description</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@c.Id">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@c.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>