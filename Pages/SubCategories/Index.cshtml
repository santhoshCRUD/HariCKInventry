@page
@model HariCKInventry.Pages.SubCategories.IndexModel
@{
    ViewData["Title"] = "Sub Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Sub Categories</h2>
    <a asp-page="Create" class="btn btn-primary btn-sm">
        + Create Sub Category
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">

        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:20%">Name</th>
                    <th style="width:20%">Category</th>
                    <th>Description</th>
                    <th style="width:18%" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model.SubCategories)
                {
                    <tr>
                        <td class="fw-semibold">@s.Name</td>
                        <td>
                            <span class="badge bg-secondary">
                                @s.Category?.Name
                            </span>
                        </td>
                        <td class="text-muted">@s.Description</td>
                        <td class="text-end">
                            <a asp-page="Edit"
                               asp-route-id="@s.Id"
                               class="btn btn-sm btn-outline-primary me-1">
                                Edit
                            </a>
                            <a asp-page="Delete"
                               asp-route-id="@s.Id"
                               class="btn btn-sm btn-outline-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }

                @if (!Model.SubCategories.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">
                            No sub categories found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
